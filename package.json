{
  "name": "@activetheory/ios-silent-bypass",
  "version": "1.0.1",
  "description": "Simple hack to allow web audio even if physical mute switch is on iPhone/iPad",
  "main": "./src/index.js",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "default": "./src/index.js",
      "types": "./src/index.d.ts"
    }
  },
  "types": "./src/index.d.ts",
  "scripts": {
    "test": "vitest --dom run",
    "test:watch": "vitest --dom",
    "format": "prettier --write --ignore-unknown",
    "release": "release-it",
    "prepare": "husky"
  },
  "sideEffects": false,
  "type": "module",
  "author": {
    "name": "Active Theory",
    "email": "hello@activetheory.net",
    "url": "https://activetheory.net"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/activetheory/ios-silent-bypass.git"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "printWidth": 200,
    "quoteProps": "as-needed",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "devDependencies": {
    "happy-dom": "^16.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.1",
    "prettier": "^3.4.2",
    "release-it": "^18.1.1",
    "vitest": "^3.0.1"
  },
  "release-it": {
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    }
  },
  "lint-staged": {
    "*": "npm run format"
  }
}
