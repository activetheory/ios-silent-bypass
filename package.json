{
  "name": "@activetheory/ios-silent-hack",
  "version": "0.0.0",
  "description": "Simple hack to allow web audio even if physical mute switch is on iPhone/iPads",
  "main": "./src/index.js",
  "exports": {
    ".": "./src/index.js"
  },
  "scripts": {
    "test": "vitest --dom run",
    "test:watch": "vitest --dom",
    "format": "prettier --write --ignore-unknown",
    "publish": "npm run format && npm run test",
    "release": "release-it",
    "prepare": "husky"
  },
  "sideEffects": false,
  "type": "module",
  "author": {
    "name": "Active Theory",
    "email": "hello@activetheory.net",
    "url": "https://activetheory.net"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/activetheory/ios-silent-hack.git"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "printWidth": 200,
    "quoteProps": "as-needed",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "devDependencies": {
    "happy-dom": "^16.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.1",
    "prettier": "^3.4.2",
    "release-it": "^18.1.1",
    "vitest": "^3.0.1"
  },
  "release-it": {
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  },
  "lint-staged": {
    "**/*": [
      "npm run format"
    ]
  }
}
